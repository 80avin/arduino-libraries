<dl class="dl-horizontal">
  <% if author[:name] %>
  <dt>Name</dt>         <dd><%= author[:name] %></dd>
  <% end %>
  <% if author[:location] %>
  <dt>Location</dt>     <dd><%= author[:location] %></dd>
  <% end %>
  <% if author[:homepage] and author[:github] != author[:homepage] %>
  <dt>Homepage</dt>     <dd><%== link_to(author[:homepage]) %></dd>
  <% end %>
  <dt>GitHub</dt>       <dd><%== link_to(author[:github]) %></dd>
</dl>


<h2>Libraries</h2>
<ul>
  <% author[:libraries].each do |key| %>
    <% library = libraries[key.to_sym] %>
    <li><%== link_to(library[:name], :href => "/libraries/#{key}") %></li>
  <% end %>
</ul>
